doctype html
html
	head
		title #{title}
		meta(charset="utf-8")
		meta(name="author" content="Flippin' Tables")
		link(rel="stylesheet" type="text/css" href="stylesheets/style.css")
	body
		h1 Place Your Ships

		table#grid
			tr
				th
				- for(var i = 1; i < 11; i++)
					th #{i}
			- var letterArray = ["A", "B", "C", "D", "E", "F", "G", "H", "I", "J"];

			- for(var i = 0; i < 10; i++){
				tr
					th #{letterArray[i]}
					-for(var j = 1; j < 11; j++)
						- var id = letterArray[i] + j;
						td(id="#{id}") #{letterArray[i]} #{j}
			- }
		div#clicked
			p
		script(src="http://code.jquery.com/jquery-1.11.2.min.js")
		script(src="javascripts/app.js")